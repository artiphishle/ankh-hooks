{
  "author": "artiphishle",
  "bugs": {
    "url": "https://github.com/artiphishle/ankh-hooks/issues"
  },
  "description": "Ankhorage collection of hooks",
  "engines": {
    "node": "^20.15.x",
    "pnpm": "^9.5.x"
  },
  "homepage": "https://github.com/artiphishle/ankh-hooks#readme",
  "keywords": [
    "ankhorage",
    "ankh",
    "hook",
    "hooks"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "name": "ankh-hooks",
  "paths": {
    "@/*": [
      "./lib/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/artiphishle/ankh-hooks.git"
  },
  "dependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "uuidv4": "^6.2.13"
  },
  "devDependencies": {
    "@testing-library/react": "^16.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.14.14",
    "ankh-types": "^1.1.0",
    "eslint": "^9.8.0",
    "eslint-config-google": "^0.14.0",
    "fake-indexeddb": "^6.0.0",
    "jsdom": "^24.1.1",
    "prettier": "^3.3.3",
    "tsup": "^8.2.4",
    "tsx": "^4.16.5",
    "typescript": "^5.5.4"
  },
  "scripts": {
    "build": "tsup",
    "changeset:add": "pnpm changeset",
    "prettier:validate": "pnpm dlx prettier --config .prettierrc --write .",
    "prettier:write": "pnpm dlx prettier --config .prettierrc --write .",
    "lint": "eslint",
    "lint:fix": "pnpm run eslint --fix",
    "prepublish": "pnpm run build",
    "test": "node --import tsx --test lib/test/index.ts"
  },
  "tsup": {
    "dts": true,
    "entry": [
      "lib/index.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "splitting": false,
    "sourcemap": true,
    "minify": true,
    "bundle": true,
    "external": [
      "react"
    ],
    "treeshake": true,
    "clean": true,
    "onSuccess": "node scripts/addClientDirective.js"
  },
  "types": "dist/index.d.ts",
  "version": "1.4.1"
}
